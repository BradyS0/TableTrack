{
    "name": "backend",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "test:integration": "jest --config=jest.integration.config.js --coverage --runInBand --testPathPattern=tests/integration",
        "test:unit": "jest --onlyChanged --coverage --testPathPattern=tests/unit",
        "start": "node server.js",
        "test:integration:start": "docker-compose -f docker-compose.test.yml up -d",
        "test:integration:logs": "docker-compose -f docker-compose.test.yml logs",
        "test:integration:stop": "docker-compose -f docker-compose.test.yml down -v",
        "local:dev:start": "docker-compose -f docker-compose.yml up -d",
        "local:dev:stop": "docker-compose -f docker-compose.yml down -v",
        "local:dev:test": "node testUserFlow.cjs"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^4.18.2",
        "pg": "^8.11.1",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.35.0"
    },
    "devDependencies": {
        "@babel/core": "^7.28.4",
        "@babel/preset-env": "^7.28.3",
        "babel-jest": "^30.2.0",
        "jest": "^29.7.0",
        "supertest": "^6.3.4"
    }
}
